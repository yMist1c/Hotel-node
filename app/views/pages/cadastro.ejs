</header>

<main>
    <div class="login-page">

        <%
        let mensagens = {"nome":"", "email":"", senha:"", csenha:""};
        let cssErro = {"nome":"", "email":"", senha:"", csenha:""};

        if(listaErros){
           listaErros.errors.forEach((itemErro)=>{
                if(itemErro.path == "nome"){
                    mensagens.nome = itemErro.msg;
                    cssErro.nome = "erro-valicacao" 
                }
                if(itemErro.path == "email"){
                    mensagens.email = itemErro.msg;
                    cssErro.email = "erro-valicacao" 
                }
                if(itemErro.path == "senha"){
                    mensagens.senha = itemErro.msg;
                    cssErro.senha = "erro-valicacao" 
                }
                if(itemErro.path == "c-senha"){
                    mensagens.csenha = itemErro.msg;
                    cssErro.csenha = "erro-valicacao" 
                }

           })  
        }


        %>


        <div class="form-cadastro">
            <a href="/"><span id="fechar">&times;</span></a>
            <form action="/cadastro" method="post"  class = "login-form">
                <h2>Cadastro</h2>
                <input type="text" name="nome" id="nome" placeholder = "Seu nome" 
                    value="<%= valores.nome %>">
                        <div class="<%= cssErro.nome %>"><%= mensagens.nome %></div>
                    <input type="text" name="email" id="email" placeholder = "Seu e-mail"
                    value="<%= valores.email %>">
                        <div class="<%= cssErro.email %>"><%= mensagens.email %></div>
                    <input type="password" name="senha" id="senha" placeholder = "Sua senha" 
                    value="<%= valores.senha %>">
                        <div class="<%= cssErro.senha %>"><%= mensagens.senha %></div>
                    <input type="password" name="c-senha" id="c-senha" placeholder = "Confime a senha" 
                    value="<%= valores.csenha %>">
                        <div class="<%= cssErro.csenha %>"><%= mensagens.csenha %></div>
                <button type="submit">Cadastrar</button>
                <p class="message">Já é cadastrado? <a href="/login">Entre</a></p>
            </form>
        </div>
    </div>
</main>
